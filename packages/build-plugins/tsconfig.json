{
  "extends": "@repo/typescript-config/react-library.json",
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "dist",
    "moduleResolution": "node",
    "target": "ES2022",
    "module": "CommonJS",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "allowJs": true,
    "checkJs": true
  },
  "include": [
    "src/**/*.ts",
    "src/*.ts",
    "src/**/*.tsx",
    "src/**/*.ts",
    "src/**/*.js",
    "src/*.js"
  ],
  "exclude": ["node_modules", "dist", "coverage"]
}
